<Window x:Class="EquipmentLayout.Views.DialogZoneName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipmentLayout.Views"
        mc:Ignorable="d"
        Title="DialogZoneName" Height="180" Width="250" ResizeMode="NoResize">
    <StackPanel>
        
        <Label x:Name="txtContent" Margin="10" x:FieldModifier="public" Height="50">
            
        </Label>

        <TextBox VerticalAlignment="Top" x:Name="txtResult" x:FieldModifier="public" Height="20" Width="200">
            
        </TextBox>

        <StackPanel DockPanel.Dock="Bottom" Margin="10" Height="20" Orientation="Horizontal" HorizontalAlignment="Right">
            
            <Button Content="Отмена" Click="Button_Click" Margin="10, 0" HorizontalAlignment="Right">
            </Button>

                <Button Margin="10, 0" Click="Button_Click_1" Content="  ОК  " HorizontalAlignment="Right">
            </Button>
            
        </StackPanel>
        
    </StackPanel>
</Window>
